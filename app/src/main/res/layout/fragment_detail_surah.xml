<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#BF784800"
            android:padding="3dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textsourat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="تفاصيل السورة"
                android:textStyle="bold"
                android:layout_weight="25"
                android:textColor="#fff"
                android:textAlignment="center"
                android:textSize="20sp"/>

        </LinearLayout>
        <LinearLayout
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/nbrMots"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text="25"
                    android:textSize="15dp"
                    android:textAlignment="textStart"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text="عدد الايات في السورة: "
                    android:textSize="15dp"
                    android:textAlignment="textStart"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text="نص بداية السورة"
                    android:textAlignment="textStart"
                    android:layout_weight="2"
                    android:textSize="15dp"
                    android:textStyle="bold"/>
            </LinearLayout>



            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="5dp"
                android:layout_marginTop="5dp"
                android:padding="3dp">

                <TextView
                    android:id="@+id/ayaAr"
                    android:textSize="18dp"
                    android:padding="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textSize="13dp"
                android:textStyle="bold"
                android:text="The text of the beginning of the surah" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                app:cardElevation="5dp"
                android:padding="3dp">

                <TextView
                    android:id="@+id/ayaEn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="يرجى الاتصال بالانترنت..."
                    android:textSize="13dp"
                    android:padding="3dp"/>

            </androidx.cardview.widget.CardView>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                app:backgroundTint="#FF003147"
                android:textColor="#ECECEC"
                android:text="اظهار السورة في المصحف"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/moukrii"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textSize="20dp"
                android:textStyle="bold"
                android:text="اختيار القارئ" />

            <Spinner
                android:id="@+id/ListMokrii"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:background="@drawable/gradient_spinner" />

            <androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    app:cardBackgroundColor="#E5EAFB"
    android:layout_height="wrap_content"
    android:layout_marginTop="12dp">


<LinearLayout
                android:id="@+id/audioLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                >

                <ImageView
                    android:id="@+id/audioBtn"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_play" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="12"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:textAlignment="textEnd"
                    android:layout_gravity="center"
                    android:text="إستمع إلى السورة "
                    tools:ignore="RtlCompat" />
            </LinearLayout>
</androidx.cardview.widget.CardView>




            <TextView
                android:id="@+id/moufasirlist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textSize="20dp"
                android:textStyle="bold"
                android:text="اختيار المفسر" />

            <Spinner
                android:id="@+id/Listmof"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:background="@drawable/gradient_spinner" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_ayats"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                app:backgroundTint="#FF003147"
                android:textColor="#ECECEC"
                android:text="اظهار كل تفاسير الآيات  لهذه السورة"
                android:textStyle="bold" />

        </LinearLayout>




    </LinearLayout>

</ScrollView>